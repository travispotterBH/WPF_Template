<Window x:Class="WPF_Template.Views.SimplePopUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Template.Views"
        mc:Ignorable="d"
        Title="SimplePopUpWindow" Height="150" Width="200"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        >
  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
    <TextBlock Text="{Binding Prompt}" HorizontalAlignment="Center" Margin="10"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
      <Button Content="Yes" Width="75" Margin="10" Click="YesButton_Click"/>
      <Button Content="No" Width="75" Margin="10" Click="NoButton_Click"/>
    </StackPanel>
  </StackPanel>
</Window>
