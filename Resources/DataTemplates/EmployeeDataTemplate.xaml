<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:local="clr-namespace:WPF_Template.Models"
                    >
  <DataTemplate x:Key="EmployeeDataTemplate" DataType="{x:Type local:Employee}">
    <DockPanel>
      <TextBlock Margin="0 0 2.5 0" Text="{Binding FirstName}"></TextBlock>
      <TextBlock Margin="0 0 2.5 0" Text="{Binding LastName}"></TextBlock>
      <TextBlock Margin="0 0 2.5 0" Text="{Binding Id}"></TextBlock>
    </DockPanel>
  </DataTemplate>
</ResourceDictionary>
