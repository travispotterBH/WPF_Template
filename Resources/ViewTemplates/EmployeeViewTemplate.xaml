<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:local="clr-namespace:WPF_Template.Models"
                    >
  <GridView x:Key="EmployeeViewTemplate" 
            AllowsColumnReorder="true" 
            ColumnHeaderToolTip="Employee Information">

    <GridViewColumn DisplayMemberBinding="{Binding Path=FirstName}" Header="First Name" Width="100"/>

    <GridViewColumn DisplayMemberBinding="{Binding Path=LastName}" Header="Last Name" Width="100"/>

    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="Employee No." Width="100"/>
  </GridView>

</ResourceDictionary>
